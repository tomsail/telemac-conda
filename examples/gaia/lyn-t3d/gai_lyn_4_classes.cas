/-----------------------------------------------------------------------
/ Gaia steering file
/-----------------------------------------------------------------------
BOUNDARY CONDITIONS FILE = geo_lyn.cli
GEOMETRY FILE            = geo_lyn.slf
RESULTS FILE             = gaia_lyn_4_classes.slf
DEBUGGER = 0
/-----------------------------------------------------------------------
/ Output
/-----------------------------------------------------------------------
VARIABLES FOR GRAPHIC PRINTOUTS =
'U,V,S,E,H,B,M,TOB,*ES,KS,CS1,SVZ1,C2DS1'
MASS-BALANCE                    = YES
/-----------------------------------------------------------------------
/ Numerical parmeters
/-----------------------------------------------------------------------
FINITE VOLUMES                          = NO
/-----------------------------------------------------------------------
/ Physical parameters
/-----------------------------------------------------------------------
CLASSES TYPE OF SEDIMENT = 'NCO';'NCO';'NCO';'NCO'
BED LOAD FOR ALL SANDS                   = NO
SUSPENSION FOR ALL SANDS                 = YES
SUSPENSION TRANSPORT FORMULA FOR ALL SANDS = 1
/original settling velocities: 0.016
CLASSES SETTLING VELOCITIES = 0.016;0.016;0.016;0.016
/CLASSES SETTLING VELOCITIES = 0.0
CLASSES SEDIMENT DENSITY = 1600;1600;1600;1600
SKIN FRICTION CORRECTION                = 1
FORMULA FOR SLOPE EFFECT                =0
FORMULA FOR DEVIATION                   =0
SEDIMENT SLIDE                          = NO
INITIAL SUSPENDED SEDIMENTS CONCENTRATION VALUES = 0.0;0.0;0.0;0.0
PRESCRIBED SUSPENDED SEDIMENTS CONCENTRATION VALUES = 0.D0;0.D0;0.D0;
0.D0;5.67D0;5.67D0;5.67D0;5.67D0
/-----------------------------------------------------------------------
/ Numerical parameters for suspension
/-----------------------------------------------------------------------
COEFFICIENT FOR VERTICAL DIFFUSION OF SUSPENDED SEDIMENTS = 1.E-6
/constant vertical profile
VERTICAL PROFILES OF SUSPENDED SEDIMENTS = 1;1;1;1
PRECONDITIONING FOR DIFFUSION OF SUSPENSION  = 2
SOLVER FOR DIFFUSION OF SUSPENSION = 3
MAXIMUM NUMBER OF ITERATIONS FOR SOLVER FOR SUSPENSION = 200
SCHEME FOR ADVECTION OF SUSPENDED SEDIMENTS = 4
SCHEME OPTION FOR ADVECTION OF SUSPENDED SEDIMENTS = 2
